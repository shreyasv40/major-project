<% layout("/layouts/boilerplate") %>

<form action="/signup" method="post" class="needs-validation"  novalidate >
    <div class="row mt-3">
        <div class="col-md-6 offset-3">

            <label for="email" class="form-label mt-3">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required>

            <label for="username" class="form-label mt-3">Enter Username</label>
            <input type="text" class="form-control" id="username" aria-describedby="emailHelp" name="username" required>

            <label for="password" class="form-label mt-3">Password</label>
            <input type="password" class="form-control" id="password" aria-describedby="emailHelp" name="password" required>

            <button class="btn btn-dark mt-3">Submit</button>

        </div>
    </div>
</form>