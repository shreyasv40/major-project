<% layout("/layouts/boilerplate") %>

    <body >
        <div class="row row-cols-lg-3 row-cols-md-2 row-col-sm-1 row-col-xs-1 mt-3">
            <% for(listing of allListing){ %>
                <a href="/listings/<%= listing.id %>">
                <div class="card col listing-card">

                        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b><br>
                                &#8377;<%= listing.price %>
                            </p>
                        </div>


                  
                </div>
            </a>
                <% } %>
        </div>
    </body>