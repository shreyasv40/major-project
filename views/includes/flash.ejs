<% if(success && success.length > 0){ %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-md-3" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
 <% } %>

 <% if(fail && fail.length > 0){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-md-3" role="alert">
        <%= fail %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
 <% } %>